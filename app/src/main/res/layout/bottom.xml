<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_tabs"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/id_tab_shouye"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bu_shouye_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:clickable="false"
            android:src="@drawable/ic_bottomtabbar_feed" />
        <TextView
            android:id="@+id/shouye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:text="首页"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_idear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bu_idear_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_bottomtabbar_idear" />
        <TextView
            android:id="@+id/idear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:text="想法"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_college"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bu_college_img"
            android:clickable="false"
            android:layout_width="25dp"
            android:scaleType="centerCrop"
            android:layout_height="25dp"
            android:src="@drawable/ic_bottomtabbar_shop"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:text="大学"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bu_message_img"
            android:clickable="false"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bottomtabbar_notification"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:text="通知"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_bu_more_img"
            android:clickable="false"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bottomtabbar_more"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:text="我的"/>
    </LinearLayout>

</LinearLayout>