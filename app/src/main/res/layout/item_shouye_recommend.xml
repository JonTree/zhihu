<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/item_recommend_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">


                <LinearLayout
                    android:id="@+id/item_linear_shouye_recommend"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_text_title_shouye_recommend"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="标题默认文字"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/item_image_content_shouye_recommend"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/pic_idear_view_flipper"
                        android:layout_height="70dp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommend_comment_linear"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_linear_shouye_recommend"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="#9A9A9A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞·"
                        android:textColor="#9A9A9A" />

                    <TextView
                        android:id="@+id/news_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="#9A9A9A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textColor="#9A9A9A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:id="@+id/shouye_recommended_choice"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_zhebook_navigationbar_more_normal"
                            android:clickable="true"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/item_recommend_app_bar"
            android:layout_marginTop="8dp"
            android:background="#E4E4E4" />

    </RelativeLayout>


</RelativeLayout>